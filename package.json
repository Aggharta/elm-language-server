{
  "name": "@elm-tooling/elm-language-server",
  "description": "Implementation of an elm language server in node.",
  "version": "1.1.1",
  "author": "Kolja Lampe",
  "license": "MIT",
  "files": [
    "out"
  ],
  "engines": {
    "node": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elm-tooling/elm-language-server"
  },
  "dependencies": {
    "elm-analyse": "github:elm-tooling/elm-analyse#29ef62033a76f4fd87983c70c6f131a0b07d07e5",
    "fast-diff": "^1.2.0",
    "glob": "^7.1.4",
    "request": "^2.88.0",
    "rxjs": "^6.5.2",
    "vscode-languageserver": "^5.2.1",
    "vscode-uri": "^2.0.3",
    "web-tree-sitter": "^0.15.7",
    "ws": "^7.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "12.6.2",
    "@types/request": "^2.48.1",
    "@types/ws": "^6.0.1",
    "husky": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "prebuild": "^9.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "tree-sitter-cli": "^0.15.6",
    "tree-sitter-elm": "^2.5.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-sonarts": "^1.9.0",
    "typescript": "3.5.3"
  },
  "scripts": {
    "copy-wasm": "mkdir -p ./out/ && cp ./tree-sitter-elm.wasm ./out/",
    "compile": "npm run copy-wasm && tsc -p ./",
    "watch": "npm run copy-wasm && tsc -watch -p ./",
    "lint": "tslint -p tsconfig.json",
    "format:fix": "pretty-quick --staged",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "build-tree-sitter": "tree-sitter build-wasm ./node_modules/tree-sitter-elm"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint"
    }
  },
  "bin": {
    "elm-language-server": "./out/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "elm",
    "elm-lang",
    "language server",
    "language-server",
    "lsp"
  ]
}
