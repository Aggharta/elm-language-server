{
  "name": "@elm-tooling/elm-language-server",
  "description": "Implementation of an elm language server in node.",
  "version": "1.0.2",
  "author": "Kolja Lampe",
  "license": "MIT",
  "files": [
    "out"
  ],
  "engines": {
    "node": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elm-tooling/elm-language-server"
  },
  "dependencies": {
    "elm-analyse": "^0.16.4",
    "fast-diff": "^1.2.0",
    "glob": "^7.1.4",
    "prebuild-install": "^5.3.0",
    "request": "^2.88.0",
    "tree-sitter": "^0.14.0",
    "tree-sitter-elm": "~2.2.4",
    "vscode-languageserver": "^5.2.1",
    "vscode-uri": "^2.0.2",
    "ws": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "12.0.8",
    "@types/request": "^2.48.1",
    "@types/ws": "^6.0.1",
    "husky": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "prebuild": "^9.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-sonarts": "^1.9.0",
    "typescript": "3.5.2"
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "format:check": "prettier --config ./.prettierrc.yaml --list-different \"src/**/*{.ts,.js,.json}\"",
    "format:fix": "pretty-quick --staged",
    "lint": "tslint -p tsconfig.json",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint"
    }
  },
  "bin": {
    "elm-language-server": "./out/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "elm",
    "elm-lang",
    "language server",
    "language-server",
    "lsp"
  ]
}
